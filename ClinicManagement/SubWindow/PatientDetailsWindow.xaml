<Window x:Class="ClinicManagement.SubWindow.PatientDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicManagement.SubWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Name="patientdetailsWindow"
        Title="Thông tin bệnh nhân"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:uc="clr-namespace:ClinicManagement.UserControlToUse"
        WindowStartupLocation="CenterScreen"
        Width="1300" Height="700">
    <Window.Resources>
        <local:AppointmentStatusToVisibilityConverter x:Key="AppointmentStatusToCancelVisibilityConverter"/>
        <local:BooleanToPharmacyConverter x:Key="BooleanToPharmacyConverter"/>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}" CommandParameter="{Binding ElementName=patientdetailsWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Control Bar -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=mainWindow}"></uc:ControlBarUC>
        </Grid>

        <!-- Main Content -->
        <materialDesign:Card Grid.Row="1" Margin="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Patient Personal Information -->
                <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="8" Margin="0,0,0,16" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Patient Details -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Patient ID - Read Only -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Mã bệnh nhân:" 
                                       FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,16"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PatientId}" 
                                       FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,32,16"/>

                            <!-- Full Name -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Họ tên bệnh nhân:" 
                                       FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,8"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Họ và tên"
                                     VerticalAlignment="Center" Margin="0,0,32,8"/>

                            <!-- Birth Date -->
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Ngày sinh:" 
                                       FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,8"/>
                            <DatePicker Grid.Row="1" Grid.Column="3" 
                                        SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                        materialDesign:HintAssist.Hint="Chọn ngày sinh" 
                                        VerticalAlignment="Center" Margin="0,0,0,8"/>

                            <!-- Gender -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Giới tính:" 
                                       FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,8"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" 
                                      ItemsSource="{Binding GenderOptions}"
                                      SelectedValue="{Binding Gender, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Chọn giới tính"
                                      VerticalAlignment="Center" Margin="0,0,32,8"/>

                            <!-- Phone -->
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Số điện thoại:" 
                                       FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,8"/>
                            <TextBox Grid.Row="2" Grid.Column="3" 
                                     Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Nhập số điện thoại"
                                     VerticalAlignment="Center" Margin="0,0,0,8"/>

                            <!-- Insurance Code -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Mã bảo hiểm:" 
                                       FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,8"/>
                            <TextBox Grid.Row="3" Grid.Column="1" 
                                     Text="{Binding InsuranceCode, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Nhập mã BHYT"
                                     VerticalAlignment="Center" Margin="0,0,32,8"/>

                            <!-- Patient Type -->
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="Loại bệnh nhân:" 
                                       FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,8"/>
                            <ComboBox Grid.Row="3" Grid.Column="3" 
                                      ItemsSource="{Binding PatientTypes}"
                                      SelectedItem="{Binding SelectedPatientType, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="TypeName"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Chọn loại bệnh nhân"
                                      VerticalAlignment="Center" Margin="0,0,0,8"/>

                            <!-- Address -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Địa chỉ:" 
                                       FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,0"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" 
                                     Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                                     TextWrapping="Wrap" 
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Nhập địa chỉ đầy đủ"
                                     AcceptsReturn="True"
                                     Height="60"
                                     VerticalScrollBarVisibility="Auto"
                                     VerticalAlignment="Center" Margin="0,0,0,0"/>
                        </Grid>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                            <Button Command="{Binding UpdatePatientCommand}" 
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Width="150" Height="36" Margin="16,0,16,16">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,8,0"/>
                                    <TextBlock Text="Lưu thông tin"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding DeletePatientCommand}" 
                                    Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                                    Width="150" Height="36" Margin="16,0,16,16">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete" Margin="0,0,8,0"/>
                                    <TextBlock Text="Xóa bệnh nhân"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>


                <!-- Tab Control for Medical Records, Invoices, Appointments -->
                <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignFilledTabControl}">
                    <!-- Medical Records Tab -->
                    <TabItem Header="Hồ sơ bệnh án">
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Filter & Search -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Date Range -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Từ ngày:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <DatePicker SelectedDate="{Binding StartDate}" Width="220"
                                                Style="{StaticResource MaterialDesignOutlinedDatePicker}" Margin="0,0,16,0"/>
                                    <TextBlock Text="đến:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <DatePicker SelectedDate="{Binding EndDate}" Width="220"
                                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
                                </StackPanel>

                                <!-- Search Box -->
                                <TextBox Grid.Column="1" Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="Tìm kiếm theo chẩn đoán"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Width="250" Height="36" Margin="16,0,0,0"
                                         HorizontalAlignment="Left" VerticalAlignment="Center"/>

                                <!-- Filter Button -->
                                <Button Grid.Column="2" Command="{Binding FilterRecordsCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Width="100" Height="36" HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FilterOutline" Margin="0,0,8,0"/>
                                        <TextBlock Text="Lọc"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Medical Records List -->
                            <ListView Grid.Row="1" ItemsSource="{Binding MedicalRecords}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Mã hồ sơ" DisplayMemberBinding="{Binding RecordId}" Width="120"/>
                                        <GridViewColumn Header="Ngày khám" Width="150">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding RecordDate, StringFormat='dd/MM/yyyy'}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Bác sĩ" DisplayMemberBinding="{Binding Doctor.FullName}" Width="150"/>
                                        <GridViewColumn Header="Chẩn đoán" DisplayMemberBinding="{Binding Diagnosis}" Width="300"/>
                                        <GridViewColumn Header="Đơn thuốc" Width="140">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Xem chi tiết" 
                                                            Command="{Binding DataContext.ViewPrescriptionCommand, 
                                                                    RelativeSource={RelativeSource FindAncestor, 
                                                                    AncestorType={x:Type ListView}}}" 
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Kết quả xét nghiệm" Width="180">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Xem chi tiết" 
                                                            Command="{Binding DataContext.ViewTestResultsCommand, 
                                                                    RelativeSource={RelativeSource FindAncestor, 
                                                                    AncestorType={x:Type ListView}}}" 
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Command="{Binding DataContext.OpenRecordCommand, 
                                                                    RelativeSource={RelativeSource FindAncestor, 
                                                                    AncestorType={x:Type ListView}}}" 
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource MaterialDesignOutlinedButton}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="FileDocumentOutline" Margin="0,0,4,0"/>
                                                            <TextBlock Text="Mở"/>
                                                        </StackPanel>
                                                    </Button>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>

                            </ListView>
                        </Grid>
                    </TabItem>

                    <!-- Invoices Tab -->
                    <TabItem Header="Hóa đơn">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="413*"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Filter & Search -->
                            <Grid Grid.Row="0" Margin="0,0,0,8" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Date Range -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Từ ngày:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <DatePicker SelectedDate="{Binding InvoiceStartDate}" Width="220"
                                                Style="{StaticResource MaterialDesignOutlinedDatePicker}" Margin="0,0,16,0"/>
                                    <TextBlock Text="đến:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <DatePicker SelectedDate="{Binding InvoiceEndDate}" Width="220"
                                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
                                </StackPanel>

                                <!-- Status Filter -->
                                <ComboBox Grid.Column="1" ItemsSource="{Binding InvoiceStatusList}"
                                         SelectedItem="{Binding SelectedInvoiceStatus}"
                                         DisplayMemberPath="DisplayName"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Width="280" Height="48" Margin="16,0,0,0"
                                         HorizontalAlignment="Left" VerticalAlignment="Center"
                                         materialDesign:HintAssist.Hint="Trạng thái thanh toán"/>

                                <!-- Filter Button -->
                                <Button Grid.Column="2" Command="{Binding FilterInvoicesCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Width="100" Height="36" HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FilterOutline" Margin="0,0,8,0"/>
                                        <TextBlock Text="Lọc"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Invoices List -->
                            <ListView Grid.Row="1" ItemsSource="{Binding Invoices}" Grid.ColumnSpan="2" 
                                      ScrollViewer.CanContentScroll="True"
                                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Mã hóa đơn" DisplayMemberBinding="{Binding InvoiceId}" Width="140"/>
                                        <GridViewColumn Header="Ngày lập" DisplayMemberBinding="{Binding InvoiceDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                                        <!--<GridViewColumn Header="Loại" Width="110">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="{}{0}">
                                                                <Binding Path="IsPharmacySale" Converter="{StaticResource BooleanToPharmacyConverter}"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>-->
                                       
                                        <GridViewColumn Header="Tổng tiền" Width="120">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:N0} VNĐ'}" 
                                                          TextWrapping="Wrap"
                                                          HorizontalAlignment="Right"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <!-- Invoice Status Column -->
                                        <GridViewColumn Header="Trạng thái" Width="180">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="6" Padding="12,6">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Đã thanh toán">
                                                                        <Setter Property="Background" Value="#E8F5E8"/>
                                                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                                        <Setter Property="BorderThickness" Value="1"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Chưa thanh toán">
                                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                                        <Setter Property="BorderBrush" Value="#FF9800"/>
                                                                        <Setter Property="BorderThickness" Value="1"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="12">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Đã thanh toán">
                                                                            <Setter Property="Text" Value="Đã thanh toán"/>
                                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Chưa thanh toán">
                                                                            <Setter Property="Text" Value="Chưa thanh toán"/>
                                                                            <Setter Property="Foreground" Value="#EF6C00"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Ghi chú" DisplayMemberBinding="{Binding Notes}"/>
                                        <GridViewColumn Header="Thao tâc">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Command="{Binding DataContext.ViewInvoiceCommand, 
                                                                RelativeSource={RelativeSource FindAncestor, 
                                                                AncestorType={x:Type ListView}}}" 
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                                Margin="0,0,8,0" Width="90" Height="32">
                                                            <StackPanel Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="FileDocumentOutline" Margin="0,0,4,0"/>
                                                                <TextBlock Text="Xem"/>
                                                            </StackPanel>
                                                        </Button>
                                                        <Button Command="{Binding DataContext.PrintInvoiceCommand, 
                                                                RelativeSource={RelativeSource FindAncestor, 
                                                                AncestorType={x:Type ListView}}}" 
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                               Width="90" Height="32">
                                                            <StackPanel Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="Printer" Margin="0,0,4,0"/>
                                                                <TextBlock Text="In"/>
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                            
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                        </Grid>
                    </TabItem>

                    <!-- Appointments Tab -->
                    <TabItem Header="Lịch hẹn">
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Filter & Actions -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Status Filter -->
                                <ComboBox Grid.Column="0" ItemsSource="{Binding AppointmentStatusList}"
                                         SelectedItem="{Binding SelectedAppointmentStatus}"
                                         DisplayMemberPath="DisplayName"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Width="180" Height="48" Margin="0,0,16,0"
                                         VerticalAlignment="Center"
                                         materialDesign:HintAssist.Hint="Trạng thái lịch hẹn"/>

                                <!-- Add New Appointment -->
                                <Button Grid.Column="2" Command="{Binding AddAppointmentCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Width="150" Height="36" HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarPlus" Margin="0,0,8,0"/>
                                        <TextBlock Text="Thêm lịch hẹn"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Appointments List -->
                            <ListView Grid.Row="1" ItemsSource="{Binding Appointments}"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Ngày hẹn" DisplayMemberBinding="{Binding AppointmentDate, StringFormat='dd/MM/yyyy HH:mm'}" Width="140"/>
                                        <GridViewColumn Header="Bác sĩ" DisplayMemberBinding="{Binding Doctor.FullName}" Width="150"/>
                                        <GridViewColumn Header="Loại hẹn" DisplayMemberBinding="{Binding AppointmentType.TypeName}" Width="150"/>
                                        <GridViewColumn Header="Ghi chú" DisplayMemberBinding="{Binding Notes}" Width="400"/>
                                        <GridViewColumn Header="Trạng thái" Width="130">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="6" Padding="10,5">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Đang chờ">
                                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                        <Setter Property="BorderThickness" Value="1"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Đang khám">
                                                                        <Setter Property="Background" Value="#F3E5F5"/>
                                                                        <Setter Property="BorderBrush" Value="#9C27B0"/>
                                                                        <Setter Property="BorderThickness" Value="1"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Đã khám">
                                                                        <Setter Property="Background" Value="#E8F5E8"/>
                                                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                                        <Setter Property="BorderThickness" Value="1"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Đã hủy">
                                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                                        <Setter Property="BorderBrush" Value="#F44336"/>
                                                                        <Setter Property="BorderThickness" Value="1"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="12">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Đang chờ">
                                                                            <Setter Property="Text" Value="Đang chờ"/>
                                                                            <Setter Property="Foreground" Value="#1565C0"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Đang khám">
                                                                            <Setter Property="Text" Value="Đang khám"/>
                                                                            <Setter Property="Foreground" Value="#7B1FA2"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Đã khám">
                                                                            <Setter Property="Text" Value="Đã khám"/>
                                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Đã hủy">
                                                                            <Setter Property="Text" Value="Đã hủy"/>
                                                                            <Setter Property="Foreground" Value="#C62828"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Thao tác">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Command="{Binding DataContext.EditAppointmentCommand, 
                                    RelativeSource={RelativeSource FindAncestor, 
                                    AncestorType={x:Type ListView}}}" 
                                    CommandParameter="{Binding}"
                              
                                    Margin="0,0,8,0" Width="90" Height="32">
                                                            <StackPanel Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="CalendarEdit" Margin="0,0,4,0"/>
                                                                <TextBlock Text="Sửa"/>
                                                            </StackPanel>
                                                            <Button.Style>
                                                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Canceled">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                        <Button Command="{Binding DataContext.CancelAppointmentCommand, 
                                    RelativeSource={RelativeSource FindAncestor, 
                                    AncestorType={x:Type ListView}}}" 
                                    CommandParameter="{Binding}"
                                
                                   Width="90" Height="32">
                                                            <StackPanel Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="CalendarRemove" Margin="0,0,4,0"/>
