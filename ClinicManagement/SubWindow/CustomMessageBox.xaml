<Window x:Class="ClinicManagement.SubWindow.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicManagement.SubWindow"
        xmlns:conver="clr-namespace:ClinicManagement.Converter"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MinWidth="350"
        MaxWidth="500"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <conver:MessageTypeToBackgroundConverter x:Key="MessageTypeToBackgroundConverter"/>
        <conver:MessageTypeToIconConverter x:Key="MessageTypeToIconConverter"/>

        <!-- Add storyboard for animation -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="20" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Border BorderThickness="1" 
            BorderBrush="#DDDDDD" 
            CornerRadius="8" 
            Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Background="#F5F5F5" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="0,0,0,1"
                    CornerRadius="8,8,0,0">
                <Grid Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding Caption}" 
                               FontWeight="SemiBold" 
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>

                    <!-- Minimize Button -->
                    <Button Grid.Column="1"
                            Width="32" 
                            Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="MinimizeButton_Click"
                            Cursor="Hand" 
                            ToolTip="Thu nhỏ">
                        <Path Data="M0,5 H10" 
                              Stroke="#555555" 
                              StrokeThickness="1" 
                              VerticalAlignment="Center" 
                              HorizontalAlignment="Center"
                              Stretch="Uniform"
                              Width="10"/>
                    </Button>

                    <!-- Close Button -->
                    <Button Grid.Column="3"
                            Width="32" 
                            Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="CloseButton_Click"
                            Cursor="Hand"
                            ToolTip="Đóng">
                        <Path Data="M0,0 L10,10 M0,10 L10,0" 
                              Stroke="#555555" 
                              StrokeThickness="1" 
                              VerticalAlignment="Center" 
                              HorizontalAlignment="Center"
                              Stretch="Uniform"
                              Width="10"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Message Content -->
            <Grid Grid.Row="1" Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Message area -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon based on message type -->
                    <Border Width="40" 
                            Height="40" 
                            CornerRadius="20" 
                            Background="{Binding MessageType, Converter={StaticResource MessageTypeToBackgroundConverter}}"
                            Margin="0,0,10,0">
                        <Path Data="{Binding MessageType, Converter={StaticResource MessageTypeToIconConverter}}"
                              Fill="White" 
                              Stretch="Uniform"
                              Width="20"
                              Height="20"/>
                    </Border>

                    <!-- Message text -->
                    <TextBlock Grid.Column="1" 
                               Text="{Binding MessageText}" 
                               TextWrapping="Wrap" 
                               VerticalAlignment="Center"
                               FontSize="14"/>
                </Grid>

                <!-- Button area -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cancel Button (Visible only for Question type) -->
                    <Button x:Name="CancelButton"
                            Content="Hủy" 
                            Width="80" 
                            Height="30"
                            Margin="0,0,5,0"
                            Grid.Column="1"
                            Background="#F5F5F5"
                            BorderBrush="#CCCCCC"
                            Foreground="#333333"
                            BorderThickness="1"
                            Click="CancelButton_Click"
                            IsCancel="True"
                            Visibility="{Binding ShowCancelButton, Converter={StaticResource BoolToVis}}"/>

                    <!-- OK Button (Always at the rightmost position) -->
                    <Button x:Name="OkButton"
                            Content="OK" 
                            Width="100" 
                            Height="30"
                            Margin="5,0,0,0"
                            Grid.Column="2"
                            Background="#3F51B5"
                            Foreground="White"
                            BorderThickness="0"
                            Click="OkButton_Click"
                            IsDefault="True"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
