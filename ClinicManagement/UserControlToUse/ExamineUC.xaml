<UserControl x:Class="ClinicManagement.UserControlToUse.ExamineUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClinicManagement.UserControlToUse"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Name="ExamineUc"
            >
    <materialDesign:Card Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Row 0: Patient Info -->
            <Border Grid.Row="0" Padding="8" Margin="0,0,0,12" Background="#F5F5F5" CornerRadius="6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Patient selection -->
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Bệnh nhân:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox
                             Width="220"
                             materialDesign:HintAssist.Hint="Nhập tên khách hàng"
                             Text="{Binding PatienName}"   
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,0,20,0">
                            <TextBlock Text="Số điện thoại:" VerticalAlignment="Center" Margin="15,0,8,0"/>
                            <TextBox
                             Width="220"
                             Text="{Binding Phone}"  
                             materialDesign:HintAssist.Hint="Nhập số điện thoại"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        </StackPanel>
                    </Grid>
                   
                    <!-- Patient details -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Mã BN:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SelectedPatient.PatientCode}" VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <TextBlock Text="Năm sinh:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SelectedPatient.BirthYear}" VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <TextBlock Text="Giới tính:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SelectedPatient.Gender}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Địa chỉ:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SelectedPatient.Address}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" MaxWidth="150" Margin="0,0,16,0"/>
                        <TextBlock Text="BHYT:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SelectedPatient.InsuranceNumber}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,15,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        

                        <TextBlock Grid.Column="0" Text="Ngày khám:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker Width="220" Height="45" Grid.Column="1" SelectedDate="{Binding RecordDate}" Style="{StaticResource MaterialDesignOutlinedDatePicker}" Margin="0,4"/>

                        <TextBlock Grid.Column="2" Text="Bác sĩ khám:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                        <ComboBox Width="220" Height="45" Grid.Column="3" ItemsSource="{Binding DoctorList}" DisplayMemberPath="FullName" 
                  SelectedItem="{Binding SelectedDoctor}" Style="{StaticResource MaterialDesignOutlinedComboBox}" Margin="0,4"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Row 1: Examination Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Vital Signs - Top Left -->
                    <GroupBox Grid.Column="0" Grid.Row="0" Header="Khám Bệnh" 
                              Style="{StaticResource MaterialDesignCardGroupBox}" 
                              Margin="0,0,8,16">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>

                            <!-- Row 1 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Mạch:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding Pulse}" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,4" Height="35"/>
                                <TextBlock Grid.Column="1" Text="lần/ph" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </Grid>

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Nhịp thở:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                            <Grid Grid.Row="0" Grid.Column="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding Respiration}" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,4" Height="35"/>
                                <TextBlock Grid.Column="1" Text="lần/ph" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </Grid>

                            <!-- Row 2 -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Nhiệt độ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding Temperature}" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,4" Height="35"/>
                                <TextBlock Grid.Column="1" Text="°C" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </Grid>

                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Cân nặng:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                            <Grid Grid.Row="1" Grid.Column="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding Weight}" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,4" Height="35"/>
                                <TextBlock Grid.Column="1" Text="kg" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </Grid>

                            <!-- Row 3 -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Huyết áp:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding SystolicPressure}" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,4" Height="35"/>
                                <TextBlock Grid.Column="1" Text="/" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                                <TextBox Grid.Column="2" Text="{Binding DiastolicPressure}" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="5,4,0,4" Height="35"/>
                                <TextBlock Grid.Column="3" Text="mmHg" VerticalAlignment="Center" Margin="5,0"/>
                            </Grid>
                        </Grid>
                    </GroupBox>

                    <!-- Diagnosis - Top Right -->
                    <GroupBox Grid.Column="1" Grid.Row="0" Header="Chẩn đoán" 
                              Style="{StaticResource MaterialDesignCardGroupBox}" 
                              Margin="8,0,0,16">
                        <TextBox Text="{Binding Diagnosis}" TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="150" Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                                 Margin="10" VerticalAlignment="Stretch"/>
                    </GroupBox>

                    <!-- Doctor Advice - Middle Left -->
                    <GroupBox Grid.Column="0" Grid.Row="1" Header="Hướng dẫn điều trị" 
                              Style="{StaticResource MaterialDesignCardGroupBox}" 
                              Margin="0,0,8,16">
                        <TextBox Text="{Binding DoctorAdvice}" TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="100" Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                                 Margin="10"/>
                    </GroupBox>

                    <!-- Test Results - Middle Right -->
                    <GroupBox Grid.Column="1" Grid.Row="1" Header="Kết quả xét nghiệm" 
                              Style="{StaticResource MaterialDesignCardGroupBox}" 
                              Margin="8,0,0,16">
                        <TextBox Text="{Binding TestResults}" TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="100" Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                                 Margin="10"/>
                    </GroupBox>

                    <!-- Prescription - Bottom Left -->
                    <GroupBox Grid.Column="0" Grid.Row="2" Header="Đơn thuốc" 
                              Style="{StaticResource MaterialDesignCardGroupBox}" 
                              Margin="0,0,8,16">
                        <TextBox Text="{Binding Prescription}" TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="100" Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                                 Margin="10"/>
                    </GroupBox>

                    <!-- Action Buttons - Bottom -->
                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="0,10,0,10">
                        <Button Command="{Binding SaveCommand}" Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="180" Height="45" Margin="10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,8,0" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Lưu hồ sơ" FontSize="14"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding PrintCommand}" Style="{StaticResource MaterialDesignOutlinedButton}"
                                Width="180" Height="45" Margin="10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Printer" Margin="0,0,8,0" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="In hồ sơ" FontSize="14"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ResetCommand}" Style="{StaticResource MaterialDesignOutlinedButton}"
                                Width="180" Height="45" Margin="10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Refresh" Margin="0,0,8,0" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Làm mới" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </materialDesign:Card>
</UserControl>
