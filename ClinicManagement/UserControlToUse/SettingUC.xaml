<UserControl x:Class="ClinicManagement.UserControlToUse.SettingUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClinicManagement.UserControlToUse"
             mc:Ignorable="d" 
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            TextElement.Foreground="{DynamicResource MaterialDesignBody}"
            TextElement.FontWeight="Regular"
            TextElement.FontSize="13"
            TextOptions.TextFormattingMode="Ideal"
            TextOptions.TextRenderingMode="Auto"
            Background="{DynamicResource MaterialDesignPaper}"
            FontFamily="{DynamicResource MaterialDesignFont}"
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
           
            Name="SettingUc">
    <materialDesign:Card>
        
    <TabControl
        materialDesign:ColorZoneAssist.Mode="PrimaryLight"
        Style="{StaticResource MaterialDesignFilledTabControl}">
        <TabItem Header="Thông tin bác sĩ">
            <materialDesign:Card Margin="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Doctor Information Header -->
                    <TextBlock 
                        Grid.Row="0" 
                        Text="THÔNG TIN BÁC SĨ" 
                        FontWeight="Bold" 
                        FontSize="18" 
                        Margin="15,15,0,20" 
                        HorizontalAlignment="Left"/>
                    
                    <!-- Doctor Information Form -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Grid Margin="15,0,15,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Left Column -->
                            <!-- Doctor ID -->
                            <TextBox
                                Grid.Row="0" 
                                Grid.Column="0"
                                Text="{Binding DoctorID, Mode=OneWay}"
                                IsReadOnly="True"
                                materialDesign:HintAssist.Hint="ID bác sĩ"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="5,10,15,10"
                                VerticalAlignment="Center"/>

                            <!-- Full Name -->
                            <TextBox
                                Grid.Row="1" 
                                Grid.Column="0"
                                Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Họ tên"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="5,10,15,10"
                                VerticalAlignment="Center"/>

                            <!-- Specialty -->
                            <ComboBox
                                Grid.Row="2" 
                                Grid.Column="0"
                                ItemsSource="{Binding SpecialtyList}"
                                DisplayMemberPath="SpecialName"
                                SelectedItem="{Binding SelectedSpecialty}"
                                materialDesign:HintAssist.Hint="Chuyên khoa"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                Margin="5,10,15,10"
                                VerticalAlignment="Center"/>

                            <!-- Certificate Link -->
                            <TextBox
                                Grid.Row="3" 
                                Grid.Column="0"
                                Text="{Binding CertificateLink, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Link chứng chỉ"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="5,10,15,10"
                                VerticalAlignment="Center"/>

                            <!-- Right Column -->
                            <!-- Phone -->
                            <TextBox
                                Grid.Row="0" 
                                Grid.Column="1"
                                Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Số điện thoại"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="15,10,5,10"
                                VerticalAlignment="Center"/>

                            <!-- Work Schedule -->
                            <TextBox
                                Grid.Row="1" 
                                Grid.Column="1"
                                Text="{Binding Schedule, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Lịch làm việc"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="15,10,5,10"
                                VerticalAlignment="Center"/>

                            <!-- Address -->
                            <TextBox
                                Grid.Row="2" 
                                Grid.Column="1"
                                Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Địa chỉ"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="15,10,5,10"
                                VerticalAlignment="Center"/>

                            <!-- Username -->
                            <TextBox
                                Grid.Row="3" 
                                Grid.Column="1"
                                Text="{Binding UserName, Mode=OneWay}"
                                IsReadOnly="True"
                                materialDesign:HintAssist.Hint="Tên đăng nhập"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="15,10,5,10"
                                VerticalAlignment="Center"/>

                            <!-- Role -->
                            <TextBox
                                Grid.Row="4" 
                                Grid.Column="1"
                                Text="{Binding Role, Mode=OneWay}"
                                IsReadOnly="True"
                                materialDesign:HintAssist.Hint="Vai trò"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="15,10,5,10"
                                VerticalAlignment="Center"/>

                            <!-- Action Buttons - Update and Change Password -->
                            <StackPanel 
                                Grid.Row="5" 
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,30,0,0">
                                
                                <Button 
                                    Command="{Binding UpdateDoctorInfoCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    Width="200"
                                    Height="45"
                                    Margin="0,0,20,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Update" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Cập nhật thông tin"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button 
                                    Command="{Binding ChangePasswordCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    Background="#FF3F51B5"
                                    BorderBrush="#FF3F51B5"
                                    Width="200"
                                    Height="45">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Đổi mật khẩu"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </TabItem>
        
        <TabItem Header="Cài đặt ứng dụng">
            <materialDesign:Card Margin="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Settings Panel -->
                    <Grid Grid.Column="0" Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Settings Header -->
                        <TextBlock 
                            Grid.Row="0" 
                            Text="CÀI ĐẶT GIAO DIỆN" 
                            FontWeight="Bold" 
                            FontSize="18" 
                            Margin="0,0,0,20" 
                            HorizontalAlignment="Left"/>
                        
                        <!-- Font Family Setting -->
                        <Grid Grid.Row="1" Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock 
                                Grid.Column="0"
                                Text="Font chữ:" 
                                VerticalAlignment="Center"
                                FontWeight="Medium"/>
                            
                            <ComboBox
                                Grid.Column="1"
                                ItemsSource="{Binding FontFamilies}"
                                SelectedItem="{Binding SelectedFontFamily, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                        </Grid>
                        
                        <!-- Font Size Setting -->
                        <Grid Grid.Row="2" Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock 
                                Grid.Column="0"
                                Text="Cỡ chữ:" 
                                VerticalAlignment="Center"
                                FontWeight="Medium"/>
                            
                            <Slider
                                Grid.Column="1"
                                Minimum="10"
                                Maximum="18"
                                Value="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}"
                                VerticalAlignment="Center"/>
                            
                            <TextBlock 
                                Grid.Column="2"
                                Text="{Binding FontSize, StringFormat='{}{0:F1}'}" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <!-- Background Color Setting -->
                        <Grid Grid.Row="3" Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock 
                                Grid.Column="0"
                                Text="Màu nền:" 
                                VerticalAlignment="Center"
                                FontWeight="Medium"/>
                          
                        </Grid>
                        
                        <!-- Theme Setting -->
                        <Grid Grid.Row="4" Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock 
                                Grid.Column="0"
                                Text="Chủ đề:" 
                                VerticalAlignment="Center"
                                FontWeight="Medium"/>
                            
                            <StackPanel 
                                Grid.Column="1" 
                                Orientation="Horizontal">
                                <RadioButton 
                                    Content="Sáng" 
                                    IsChecked="{Binding IsLightTheme}"
                                    Margin="0,0,20,0"
                                    GroupName="ThemeSelection"/>
                                <RadioButton 
                                    Content="Tối" 
                                    IsChecked="{Binding IsDarkTheme}"
                                    GroupName="ThemeSelection"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Primary Color Setting -->
                        <Grid Grid.Row="5" Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock 
                                Grid.Column="0"
                                Text="Màu chính:" 
                                VerticalAlignment="Center"
                                FontWeight="Medium"/>
                        
                        </Grid>
                        
                        <!-- Action Buttons -->
                        <StackPanel 
                            Grid.Row="6"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0">
                            
                            <Button 
                                Command="{Binding SaveSettingsCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                Width="160"
                                Height="45"
                                Margin="0,0,20,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Lưu cài đặt"/>
                                </StackPanel>
                            </Button>
                            
                            <Button 
                                Command="{Binding ResetSettingsCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                Width="160"
                                Height="45">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Restore" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Đặt lại mặc định"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Preview Panel -->
                    <materialDesign:Card 
                        Grid.Column="1" 
                        Margin="15"
                        UniformCornerRadius="8"
                        Background="{Binding PreviewBackground}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock 
                                Grid.Row="0"
                                Text="XEM TRƯỚC" 
                                FontWeight="Bold" 
                                FontSize="18" 
                                Margin="15,15,0,15" 
                                Foreground="{Binding PreviewForeground}"
                                HorizontalAlignment="Center"/>
                            
                            <StackPanel 
                                Grid.Row="1" 
                                Margin="20">
                                <TextBlock 
                                    Text="Xem trước giao diện ứng dụng"
                                    FontFamily="{Binding SelectedFontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Foreground="{Binding PreviewForeground}"
                                    Margin="0,0,0,20"
                                    TextWrapping="Wrap"/>
                                
                                <TextBlock 
                                    Text="Font chữ và màu sắc sẽ được áp dụng cho toàn bộ ứng dụng sau khi bạn lưu cài đặt."
                                    FontFamily="{Binding SelectedFontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Foreground="{Binding PreviewForeground}"
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,20"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <Button 
                                        Content="Nút chính"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="{Binding PrimaryColorBrush}"
                                        BorderBrush="{Binding PrimaryColorBrush}"
                                        Margin="0,0,10,0"/>
                                    
                                    <Button 
                                        Content="Nút phụ"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        BorderBrush="{Binding PrimaryColorBrush}"
                                        Foreground="{Binding PrimaryColorBrush}"/>
                                </StackPanel>
                                
                                <CheckBox 
                                    Content="Hộp kiểm"
                                    FontFamily="{Binding SelectedFontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Foreground="{Binding PreviewForeground}"
                                    Margin="0,10,0,10"/>
                                
                                <RadioButton 
                                    Content="Nút radio"
                                    FontFamily="{Binding SelectedFontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Foreground="{Binding PreviewForeground}"
                                    Margin="0,10,0,10"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </materialDesign:Card>
        </TabItem>
    </TabControl>
    </materialDesign:Card>
</UserControl>
