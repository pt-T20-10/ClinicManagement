                                    Margin="0,0,0,15"
                                    Width="300"
                                    HorizontalAlignment="Center"/>

                                    <!-- Description Field -->
                                    <TextBox 
                                    Grid.Row="2"
                                    Text="{Binding UnitDescription, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,  ValidatesOnDataErrors=True}"
                                    materialDesign:HintAssist.Hint="Mô tả chi tiết"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    TextWrapping="Wrap"
