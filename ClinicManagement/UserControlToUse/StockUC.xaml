                                                    Margin="0,0,0,8"/>
                                                    <TextBlock 
                                                    Text="1. Chọn một loại thuốc từ danh sách để sửa hoặc xóa." 
                                                    TextWrapping="Wrap"
                                                    Margin="0,4,0,4"/>
                                                    <TextBlock 
                                                    Text="2. Điền tên loại thuốc và mô tả, nhấn 'Thêm' để tạo loại thuốc mới." 
                                                    TextWrapping="Wrap"
                                                    Margin="0,4,0,4"/>
                                                    <TextBlock 
                                                    Text="3. Sửa thông tin loại thuốc hiện tại và nhấn 'Sửa' để cập nhật." 
                                                    TextWrapping="Wrap"
                                                    Margin="0,4,0,4"/>
                                                </StackPanel>
                                            </materialDesign:Card>
                                        </Grid>
                                    </materialDesign:Card>

                                    <!-- Right Panel - Units List -->
                                    <materialDesign:Card 
                                    Grid.Column="1" 
                                    Margin="10,0,0,0"
                                    UniformCornerRadius="8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- List Header -->
                                            <Grid 
                                            Grid.Row="0" 
                                            Background="{DynamicResource PrimaryHueMidBrush}" 
                                            Height="50">
                                                <TextBlock 
                                                Text="DANH SÁCH LOẠI THUỐC" 
                                                FontWeight="Medium" 
                                                FontSize="16" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center"/>
                                            </Grid>
                                                <materialDesign:Card Grid.Row="1" Margin="8" UniformCornerRadius="8">
                                               
                                                    <ScrollViewer 
                                            Grid.Row="1" 
                                            VerticalScrollBarVisibility="Auto"
                                            Margin="0,5,0,0">
                                                        <!-- DataGrid for Categories -->
                                                        <ScrollViewer 
                                                Grid.Row="1" 
                                                VerticalScrollBarVisibility="Auto"
                                                Margin="0,5,0,0">
                                                            <DataGrid 
                                                    ItemsSource="{Binding CategoryList}" 
                                                    SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                                    AutoGenerateColumns="False"
                                                    IsReadOnly="True"
                                                    SelectionMode="Single"
                                                    SelectionUnit="FullRow"
                                                    CanUserAddRows="False"
                                                    CanUserDeleteRows="False"
                                                         BorderThickness="1"
                                                  BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                  Background="White"
                                                  VerticalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                                                  HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                                                  CanUserSortColumns="True">
                                                                <DataGrid.Resources>
                                                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                        <Setter Property="Background" Value="#E3F2FD" />
                                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                                        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}" />
                                                                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                                                                        <Setter Property="Padding" Value="8" />
                                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                                    </Style>

                                                                    <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
                                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                                                        <Setter Property="Padding" Value="4,0"/>
                                                                    </Style>
                                                                </DataGrid.Resources>

                                                                <DataGrid.Columns>
                                                                    <DataGridTextColumn Header="ID" 
                                                            Binding="{Binding CategoryId}" 
                                                            Width="100"
                                                            ElementStyle="{StaticResource CenteredCellStyle}"/>
                                                                    <DataGridTextColumn Header="Tên loại thuốc" 
                                                            Binding="{Binding CategoryName}" 
                                                            Width="180"
                                                            ElementStyle="{StaticResource CenteredCellStyle}"/>
                                                                    <DataGridTextColumn Header="Mô tả" 
                                                            Binding="{Binding Description}" 
                                                            Width="*"
                                                            ElementStyle="{StaticResource CenteredCellStyle}"/>
                                                                </DataGrid.Columns>
                                                            </DataGrid>
                                                        </ScrollViewer>
                                                    </ScrollViewer>
                                                </materialDesign:Card>
                                            </Grid>
                                    </materialDesign:Card>
                                </Grid>
                            </materialDesign:Card>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>

            <TabItem Header="Nhà cung cấp">
                <TabItem.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="🔄 Làm mới" 
                        Command="{Binding RefreshSulpierCommand}"
                        FontWeight="Bold"/>
                    </ContextMenu>
                </TabItem.ContextMenu>
                <materialDesign:Card Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="112*"/>
                            <ColumnDefinition Width="451*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Supplier Management panel -->
                        <materialDesign:Card Grid.Row="0" Margin="10,10,10,10" UniformCornerRadius="8" Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Form Title -->
                                <TextBlock 
                                Grid.Row="0" 
                                Text="THÔNG TIN NHÀ CUNG CẤP" 
                                FontWeight="Bold" 
                                FontSize="18" 
                                Margin="15,15,0,15" 
                                HorizontalAlignment="Left"/>

                                <!-- Horizontal Input Controls - Grid layout -->
                                <Grid Grid.Row="1" Margin="15,0,15,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Supplier Code -->
                                    <TextBox
                                    TabIndex="1"
                                    Grid.Row="0" Grid.Column="0"
                                    Text="{Binding SupplierCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnSourceUpdated=True}"
                                    Margin="10"
                                    materialDesign:HintAssist.Hint="Mã nhà cung cấp (VD: NCC001)"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                    <!-- Supplier Name -->
                                    <TextBox
                                    Grid.Row="0" Grid.Column="1"
                                    TabIndex="2"
                                    Text="{Binding SupplierName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnSourceUpdated=True}"
                                    Margin="10"
                                    materialDesign:HintAssist.Hint="Tên nhà cung cấp"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                    <!-- Phone -->
                                    <TextBox
                                    Grid.Row="0" Grid.Column="2"
                                    TabIndex ="3"           
                            
                             Text="{Binding SupplierPhone, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                             Margin="10"
                             materialDesign:HintAssist.Hint="Số điện thoại"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>


                                    <!-- Email -->
                                    <TextBox
                             Grid.Row="1" Grid.Column="0"
                               TabIndex="4"
                             Text="{Binding SupplierEmail, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                             Margin="10"
                             materialDesign:HintAssist.Hint="Email"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                    <!-- Tax Code -->
                                    <TextBox
                             Grid.Row="1" Grid.Column="1"
                               TabIndex="5"
                             Text="{Binding SupplierTaxCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                             Margin="10"
                             materialDesign:HintAssist.Hint="Mã số thuế"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                    <!-- Row 2 -->
                                    <!-- Address -->
                                    <TextBox
                             Grid.Row="2" Grid.Column="0"
                               TabIndex="6"
                             Text="{Binding SupplierAddress, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                             Margin="10"
                             materialDesign:HintAssist.Hint="Địa chỉ"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                    <!-- Contact Person -->
                                    <TextBox
                             Grid.Row="2" Grid.Column="1"
                               TabIndex="7"
                             Text="{Binding ContactPerson, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                             Margin="10"
                             materialDesign:HintAssist.Hint="Người liên hệ"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                    <GroupBox Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Header="Trạng thái" 
                           Margin="10" 
                          
                           Style="{StaticResource MaterialDesignCardGroupBox}">
                                        <StackPanel Orientation="Vertical" Margin="5">
                                            <!-- Active Radio Button -->
                                            <RadioButton Content="Hoạt động" 
                                  TabIndex="8"
                                  IsChecked="{Binding IsActive}" 
                                  Command="{Binding SetActiveStatusCommand}"
                               
                                  Margin="0,2,0,2"
                                  Style="{StaticResource MaterialDesignRadioButton}">
                                                <RadioButton.ContentTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="CheckCircle" 
                                        Width="18" Height="18" 
                                        Foreground="Green" 
                                        VerticalAlignment="Center" 
                                        Margin="0,0,5,0"/>
                                                            <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </RadioButton.ContentTemplate>
                                            </RadioButton>

                                            <!-- Inactive Radio Button -->
                                            <RadioButton Content="Ngừng hoạt động" 
                                      IsChecked="{Binding IsNotActive}" 
                                      Command="{Binding SetNoActiveStatusCommand}"
                                       TabIndex="9"
                                      Margin="0,2,0,2"
                                      Style="{StaticResource MaterialDesignRadioButton}">
                                                <RadioButton.ContentTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Cancel" 
                                        Width="18" Height="18" 
                                        Foreground="Red" 
                                        VerticalAlignment="Center" 
                                        Margin="0,0,5,0"/>
                                                            <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </RadioButton.ContentTemplate>
                                            </RadioButton>
                                        </StackPanel>
                                    </GroupBox>

                                    <!-- Action Buttons -->
                                    <StackPanel VerticalAlignment="Center" Grid.Column="3" Grid.Row="0" Grid.RowSpan="3" Orientation="Vertical">
                                        <Button 
                                   Command="{Binding AddSupplierCommand}" 
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   materialDesign:ButtonAssist.CornerRadius="5"
                                   Margin="0,0,0,0" 
                                   Height="36"
                                   Width="110">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBlock Text="Thêm"/>
                                            </StackPanel>
                                        </Button>

                                        <Button 
                               Command="{Binding  EditSupplierCommand}" 
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               materialDesign:ButtonAssist.CornerRadius="5"
                               Background="#FF3F51B5"
                               BorderBrush="#FF3F51B5"
                               Margin="0,5,0,0" 
                               Height="36"
                               Width="110">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBlock Text="Cập nhật"/>
                                            </StackPanel>
                                        </Button>

                                        <Button 
                                   Command="{Binding DeleteSupplierCommand}" 
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   materialDesign:ButtonAssist.CornerRadius="5"
                                   Background="#FFE91E63"
                                   BorderBrush="#FFE91E63"
                                  Margin="0,5,0,0" 
                                   Height="36"
                                   Width="110">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBlock Text="Xóa"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Action Buttons and Search + Filter in the same row -->
                                <Grid Grid.Row="2" Margin="15,10,15,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>

                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>



                                    <!-- Filter Options -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <RadioButton 
                                 Content="Tất cả" 
                                 IsChecked="{Binding ShowAllSuppliers}"
                                 Margin="0,0,15,0"
                                 GroupName="SupplierFilter"/>
                                        <RadioButton 
                                 Content="Đang hoạt động" 
                                 IsChecked="{Binding ShowActiveSuppliers}"
                                 Margin="0,0,15,0"
                                 GroupName="SupplierFilter"/>
                                        <RadioButton 
                                 Content="Ngừng hoạt động" 
                                 IsChecked="{Binding ShowInactiveSuppliers}"
                                 GroupName="SupplierFilter"/>
                                    </StackPanel>

                                    <TextBox
                             Margin="20 0 0 0"
                             Grid.Column="2"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Text="{Binding SupplierSearchText, UpdateSourceTrigger=PropertyChanged}"
                             Height="42"
                             Width="500"
                             Padding="15 0 0 0 "
                             materialDesign:HintAssist.Hint="Tên nhà cung cấp"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                    <Button
                              HorizontalAlignment="Right"
                              Style="{StaticResource MaterialDesignRaisedButton}" Margin="10 5 5 5 "
                              Grid.Column="2"
                              Width="120"
                              Height="32"
                              ToolTip="Resource name: MaterialDesignRaisedButton"
                               Command="{Binding SearchSupplierCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Search" Margin="0,0,8,0"/>
                                            <TextBlock Text="Tìm kiếm"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>
                        <materialDesign:Card Grid.Row="1" Margin="10,10,10,10" UniformCornerRadius="8" Grid.ColumnSpan="2">
                            <Grid>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <!-- DataGrid for Suppliers -->
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                        <DataGrid Grid.Row="1" 
                                   ItemsSource="{Binding SupplierList}"
                                   SelectedItem="{Binding SelectedSupplier, Mode=TwoWay}"
                                   AutoGenerateColumns="False"
                                   IsReadOnly="True"
                                   SelectionMode="Single"
                                   SelectionUnit="FullRow"
                                   CanUserAddRows="False"
                                   CanUserDeleteRows="False"
                                        BorderThickness="1"
      BorderBrush="{DynamicResource MaterialDesignDivider}"
      Background="White"
      VerticalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
      HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
      CanUserSortColumns="True">
                                            <DataGrid.Resources>
                                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                        <Setter Property="Background" Value="#E3F2FD" />
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}" />
                                                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                                                        <Setter Property="Padding" Value="8" />
                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    </Style>

                                                    <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                                    <Setter Property="Padding" Value="4,0"/>
                                                </Style>
                                            </DataGrid.Resources>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Mã NCC" 
                                         Binding="{Binding SupplierCode}" 
                                         Width="120" 
                                         ElementStyle="{StaticResource CenteredCellStyle}"/>
                                                <DataGridTextColumn Header="Nhà cung cấp" 
                     Binding="{Binding SupplierName}" 
                     Width="220"
                     ElementStyle="{StaticResource CenteredCellStyle}"/>
                                                <DataGridTextColumn Header="Người liên hệ" 
                     Binding="{Binding ContactPerson}" 
                     Width="150"
                     ElementStyle="{StaticResource CenteredCellStyle}"/>
                                                <DataGridTextColumn Header="SĐT" 
                     Binding="{Binding Phone}" 
                     Width="150"
                     ElementStyle="{StaticResource CenteredCellStyle}"/>
                                                <DataGridTextColumn Header="Email" 
                     Binding="{Binding Email}" 
                     Width="200"
                     ElementStyle="{StaticResource CenteredCellStyle}"/>
                                                <DataGridTextColumn Header="Mã số thuế" 
                     Binding="{Binding TaxCode}" 
                     Width="150"
                     ElementStyle="{StaticResource CenteredCellStyle}"/>
                                                <DataGridTextColumn Header="Địa chỉ" 
                     Binding="{Binding Address}" 
                     Width="500"
                     ElementStyle="{StaticResource CenteredCellStyle}"/>
                                                <DataGridTemplateColumn Header="Trạng thái" Width="120">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock HorizontalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                                <Setter Property="Text" Value="Hoạt động"/>
                                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                                <Setter Property="Text" Value="Ngừng"/>
                                                                                <Setter Property="Foreground" Value="#F44336"/>
                                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </ScrollViewer>

                                </ScrollViewer>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                </materialDesign:Card>
            </TabItem>

        </TabControl>
    </Grid>
    </materialDesign:Card>

</UserControl>
