                                        Margin="5" 
                                        Width="90"
                                        Height="36">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBlock Text="Xóa"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>

                                    <!-- Information Box -->
                                    <materialDesign:Card 
                                    Height="200"
                                    VerticalAlignment="Top"
                                    Grid.Row="4" 
                                    Margin="0,10,0,0"
                                    UniformCornerRadius="5"
                                    Background="#FFF5F5F5">
                                        <StackPanel Margin="16">
                                            <TextBlock 
                                            Text="Hướng dẫn sử dụng:"
                                            FontWeight="Medium"
                                            Margin="0,0,0,8"/>
