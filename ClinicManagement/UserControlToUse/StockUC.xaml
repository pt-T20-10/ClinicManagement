                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- List Header -->
                                        <Grid 
                                    Grid.Row="0" 
                                    Background="{DynamicResource PrimaryHueMidBrush}" 
