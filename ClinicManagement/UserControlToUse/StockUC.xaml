                                            Margin="0,4,0,4"/>
                                            <TextBlock 
                                            Text="3. Sửa thông tin đơn vị hiện tại và nhấn 'Sửa' để cập nhật." 
                                            TextWrapping="Wrap"
                                            Margin="0,4,0,4"/>
                                        </StackPanel>
                                    </materialDesign:Card>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Right Panel - Units List -->
                            <materialDesign:Card 
                            Grid.Column="1" 
                            Margin="10,0,0,0"
                            UniformCornerRadius="8">
