                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    --><!-- Viết tắt tên bệnh nhân --><!--
                    <Border Grid.Column="0" Width="40" Height="40" Background="#E0E0E0" 
                            CornerRadius="20" Margin="16,12">
